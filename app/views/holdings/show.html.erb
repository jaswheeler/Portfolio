<%- model_class = Holding -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human %>: <%= @holding.symbol %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= number_to_currency(@holding.price) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qty) %>:</strong></dt>
  <dd><%= @holding.qty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ask) %>:</strong></dt>
  <dd><%= number_to_currency(@holding.ask) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bid) %>:</strong></dt>
  <dd><%= number_to_currency(@holding.bid) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gain) %>:</strong></dt>
  <dd><%= number_to_currency(@holding.gain) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:daily_low) %>:</strong></dt>
  <dd><%= number_to_currency(@holding.daily_low) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:daily_high) %>:</strong></dt>
  <dd><%= number_to_currency(@holding.daily_high) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @holding.notes %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              holdings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_holding_path(@holding), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              holding_path(@holding),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
